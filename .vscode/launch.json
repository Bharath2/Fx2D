{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "(gdb) Launch Fx2D",
      "type": "cppdbg",
      "request": "launch",
      "program": "${workspaceFolder}/Fx2D.exe",
      "args": [],                           // add any CLI args here
      "stopAtEntry": false,                // switch to true if you want to break on main()
      "cwd": "${workspaceFolder}",         // working dir for your app
      "environment": [{
          "name":  "PATH",
          "value": "C:\\msys64\\mingw64\\bin;${env:PATH}"
        }],                    // any env-vars you need
      "externalConsole": false,             // true if you want a separate console window
      "preLaunchTask": "make debug",       // build with debug symbols first
      "MIMode": "gdb",
      "miDebuggerPath": "C:\\msys64\\mingw64\\bin\\gdb.exe",             // or full path: C:\\mingw64\\bin\\gdb.exe
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        },
        {
          "description": "Use Intel syntax",
          "text": "-gdb-set disassembly-flavor intel",
          "ignoreFailures": true
        },
        {
        "description": "Stop on segfault",
        "text": "-gdb-set breakpoint pending on",
        "ignoreFailures": true
        },
        {
        "description": "Catch SIGSEGV",
        "text": "handle SIGSEGV stop print",
        "ignoreFailures": true
        }
      ]
    }
    // .. you can still keep your "(gdb) Attach" config here if you need it
  ]
}
